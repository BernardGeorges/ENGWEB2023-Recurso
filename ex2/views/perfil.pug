extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h2 Consulta de #{consulta.nome}
        br
        .w3-container.w3-padding
            h4 Data: #{consulta.data}
            h4 Idade: #{consulta.idade}
            h4 Sexo: #{consulta.sexo}
            h4 NIF: #{consulta.nif}
            table.w3-table-all
                tr
                    th Codigo
                    th Nome
                    th Descrição
                each inter in consulta.operacoes
                    tr
                      td 
                        a(href='/intervencoes/'+inter.codigo)= inter.codigo
                      td= inter.nome 
                      td= inter.descricao
        footer.w3-container.w3-teal
            h5 Generated by Bernard A. Georges - #[a(href="/") Return]